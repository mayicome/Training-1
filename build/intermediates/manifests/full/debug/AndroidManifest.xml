<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oucb303.training"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-feature android:name="android.hardware.usb.host" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.oucb303.training.App"
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.oucb303.training.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity
            android:name="com.oucb303.training.activity.RandomTrainingActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan" />
        <activity
            android:name="com.oucb303.training.activity.BaseTrainingActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan" />
        <activity
            android:name="com.oucb303.training.activity.SequenceTrainingActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan" />
        <activity
            android:name="com.oucb303.training.activity.TrainingListActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan" />
        <activity android:name="com.oucb303.training.activity.ShuttleRunActivity" >
        </activity>
        <activity android:name="com.oucb303.training.activity.VideoActivity" >
        </activity>
        <activity android:name="com.oucb303.training.activity.SitUpsActivity" >
        </activity>
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>