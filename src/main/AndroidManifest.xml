<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.oucb303.training"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.usb.host"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter"/>
        </activity>
        <activity
            android:name=".activity.RandomTrainingActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan"/>
        <activity
            android:name=".activity.BaseTrainingActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan"/>
        <activity
            android:name=".activity.SequenceTrainingActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan"/>
        <activity
            android:name=".activity.TrainingListActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan"/>
        <activity android:name=".activity.ShuttleRunActivity">
        </activity>
        <activity android:name=".activity.VideoActivity">
        </activity>
    </application>

</manifest>