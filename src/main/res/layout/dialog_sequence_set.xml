<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_sequence_set"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/border"
            android:id="@+id/relativeLayout4">

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_marginLeft="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp"
                    android:text="循环次数:"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/tv_loop_times"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:text="次"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="660dp"
                android:layout_height="65dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="110dp">

                <ImageView
                    android:id="@+id/img_loop_times_sub"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="78dp"
                    android:layout_marginTop="12dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="35sp" />

                <SeekBar
                    android:id="@+id/bar_loop_times"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dip"
                    android:max="30"
                    android:progress="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="485dp"
                    android:layout_marginTop="12dp"
                    android:text="30"
                    android:textColor="@color/black"
                    android:textSize="35sp" />


                <ImageView
                    android:id="@+id/img_loop_times_add"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="540dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="210dp"
                android:layout_marginLeft="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp"
                    android:text="全局延时:"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/tv_whole_delay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:text="秒"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="660dp"
                android:layout_height="65dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="280dp">

                <ImageView
                    android:id="@+id/img_whole_delay_time_sub"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="78dp"
                    android:layout_marginTop="12dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="35sp" />

                <SeekBar
                    android:id="@+id/bar_whole_delay_time"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dip"
                    android:max="60"
                    android:progress="5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="485dp"
                    android:layout_marginTop="12dp"
                    android:text="60"
                    android:textColor="@color/black"
                    android:textSize="35sp" />


                <ImageView
                    android:id="@+id/img_whole_delay_time_add"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="540dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="395dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="290dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:background="@drawable/sequence_sure"
                    />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="168dp"
            android:background="@drawable/sequence_set"
            android:id="@+id/relativeLayout"
            android:layout_marginStart="218dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/relativeLayout4"
            android:layout_alignStart="@+id/relativeLayout4">

        </RelativeLayout>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="255dp"
            android:background="@drawable/btn_close_set"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"/>
    </RelativeLayout>

</LinearLayout>

