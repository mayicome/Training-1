<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar_newer"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_groupdevide"
                android:layout_width="600dp"
                android:layout_height="510dp">

                <ListView
                    android:layout_margin="10dp"
                    android:id="@+id/lv_sequence"
                    android:dividerHeight="5dp"
                    android:divider="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="27dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_begin"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/img_situpbegin"
                    />
                <Button
                    android:id="@+id/btn_pause"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/img_situppause"
                    />
                <Button
                    android:id="@+id/btn_stop"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/img_situpstop"
                    />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:weightSum="1">
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_score"
                android:orientation="vertical"
                android:layout_width="620dp"
                android:layout_height="600dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.95">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_marginLeft="70dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已循环次数:  "
                        android:textSize="23sp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="23sp"
                        android:id="@+id/tv_looped_times"/>
                    <TextView
                        android:layout_marginLeft="80dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="执行步骤:  "
                        android:textSize="23sp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="23sp"
                        android:id="@+id/tv_step"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="90dp"
                    android:orientation="horizontal"
                    android:layout_width="650dp"
                    android:layout_height="1dip"
                    android:id="@+id/linearLayout">

                    <View
                        android:layout_width="550dp"
                        android:layout_height="1dip"
                        android:background="@color/grey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="100dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/linearLayout2">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="序号"
                        android:textColor="@color/black"
                        android:textSize="23sp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="所用时间"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="23sp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="备注"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="23sp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="编号"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="150dp"
                    android:orientation="horizontal"
                    android:layout_width="650dp"
                    android:layout_height="1dip">

                    <View
                        android:layout_width="550dp"
                        android:layout_height="1dip"
                        android:background="@color/grey"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="170dp"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <ListView
                        android:layout_margin="10dp"
                        android:id="@+id/lv_time_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#00000000">

                    </ListView>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="450dp"
                android:layout_height="55dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/bg_scoretitle"
                android:id="@+id/relativeLayout2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总时间: "
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 00:00:00"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="220dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
