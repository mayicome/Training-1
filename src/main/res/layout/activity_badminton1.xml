<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activity.CombinedTrainingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_title_bar_newer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_first"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/relativeLayout9"
                android:layout_alignLeft="@+id/relativeLayout9"
                android:layout_alignRight="@+id/relativeLayout9"
                android:layout_alignStart="@+id/relativeLayout9"
                android:background="@drawable/bg_time"
                android:orientation="vertical">

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relativeLayout7"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/rl_first"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_traintime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="2dp"
                    android:text="训练时间:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_training_time"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="2dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="245dp"
                    android:layout_marginTop="2dp"
                    android:text="分钟"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout9"
                android:layout_width="560dp"
                android:layout_height="55dp"
                android:layout_above="@+id/rl_first1"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/img_training_time_sub"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <SeekBar
                    android:id="@+id/bar_training_time"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dip"
                    android:max="20"
                    android:progress="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="465dp"
                    android:layout_marginTop="5dp"
                    android:text="30"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/img_training_time_add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="510dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_first1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/relativeLayout10"
                android:layout_alignLeft="@+id/relativeLayout10"
                android:layout_alignRight="@+id/relativeLayout10"
                android:layout_alignStart="@+id/relativeLayout10"
                android:layout_below="@+id/rl_first"
                android:layout_marginTop="19dp"
                android:background="@drawable/bg_time"
                android:orientation="vertical">

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relativeLayout8"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_alignLeft="@+id/relativeLayout7"
                android:layout_alignStart="@+id/relativeLayout7"
                android:layout_alignTop="@+id/rl_first1"
                android:background="@drawable/bg_traintime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="2dp"
                    android:text="训练次数:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_training_times"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="2dp"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="2dp"
                    android:text="次"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout10"
                android:layout_width="560dp"
                android:layout_height="55dp"
                android:layout_alignLeft="@+id/relativeLayout9"
                android:layout_alignStart="@+id/relativeLayout9"
                android:layout_below="@+id/relativeLayout8">

                <ImageView
                    android:id="@+id/img_training_times_sub"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <SeekBar
                    android:id="@+id/bar_training_times"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dip"
                    android:max="20"
                    android:progress="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="460dp"
                    android:layout_marginTop="5dp"
                    android:text="500"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/img_training_times_add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="510dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_first2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/rl_first1"
                android:layout_alignLeft="@+id/rl_first1"
                android:layout_alignRight="@+id/rl_first1"
                android:layout_alignStart="@+id/rl_first1"
                android:layout_below="@+id/rl_first1"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_time"
                android:orientation="vertical">

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relativeLayout"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_alignLeft="@+id/relativeLayout8"
                android:layout_alignStart="@+id/relativeLayout8"
                android:layout_alignTop="@+id/rl_first2"
                android:background="@drawable/bg_traintime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="2dp"
                    android:text="延迟时间:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_delay_time"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="2dp"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_delay_time"
                    android:layout_alignBottom="@+id/tv_delay_time"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/tv_delay_time"
                    android:layout_toRightOf="@+id/tv_delay_time"
                    android:text="秒"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout11"
                android:layout_width="560dp"
                android:layout_height="55dp"
                android:layout_alignLeft="@+id/rl_first2"
                android:layout_alignStart="@+id/rl_first2"
                android:layout_below="@+id/relativeLayout">

                <ImageView
                    android:id="@+id/img_delay_time_sub"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <SeekBar
                    android:id="@+id/bar_delay_time"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dip"
                    android:max="20"
                    android:progress="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="465dp"
                    android:layout_marginTop="5dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/img_delay_time_add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="510dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_first3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/rl_first2"
                android:layout_alignLeft="@+id/rl_first2"
                android:layout_alignRight="@+id/rl_first2"
                android:layout_alignStart="@+id/rl_first2"
                android:layout_below="@+id/rl_first2"
                android:layout_marginTop="11dp"
                android:background="@drawable/bg_time"
                android:orientation="vertical"></RelativeLayout>

            <RelativeLayout

                android:id="@+id/relativeLayout12"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignStart="@+id/relativeLayout"
                android:layout_alignTop="@+id/rl_first3"
                android:background="@drawable/bg_traintime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="2dp"
                    android:text="超时时间:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_over_time"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="2dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_over_time"
                    android:layout_alignBottom="@id/tv_over_time"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/tv_over_time"
                    android:layout_toRightOf="@id/tv_over_time"
                    android:text="秒"
                    android:textColor="@color/white"
                    android:textSize="25sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout13"
                android:layout_width="560dp"
                android:layout_height="55dp"
                android:layout_alignLeft="@+id/rl_first3"
                android:layout_alignStart="@+id/rl_first3"
                android:layout_below="@+id/relativeLayout12">

                <ImageView
                    android:id="@+id/img_over_time_sub"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="5dp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <SeekBar
                    android:id="@+id/bar_over_time"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dip"
                    android:max="20"
                    android:progress="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="465dp"
                    android:layout_marginTop="5dp"
                    android:text="30"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/img_over_time_add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="510dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_third"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="565dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_downtime"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总时间:00:00:00"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_begin"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/img_situpbegin" />

                    <Button
                        android:id="@+id/btn_pause"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/img_situppause" />

                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/img_situpstop" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        //right

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout

                android:id="@+id/relativeLayout2"
                android:layout_width="450dp"
                android:layout_height="45dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_scoretitle">


                <Button
                    android:id="@+id/btn_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:text="训练结果"
                    android:textColor="@color/ui_green"
                    android:textSize="25sp" />


                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="290dp"-->
                <!--android:layout_marginTop="2dp"-->
                <!--android:text="历史成绩"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="25sp" />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/relativeLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout14">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="运行时间："
                        android:textSize="25dp"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="遗漏次数："
                        android:textSize="25dp"
                        />
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:text="平均时间:"
                        android:textSize="25dp"
                    />




                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/relativeLayout14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout15">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal"
                    >
                <TextView
                    android:id="@+id/tv_current_times"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="- - -"
                    android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/tv_lost_times"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="- - -"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/tv_average_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="- - -"
                        android:textSize="25dp"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/relativeLayout15"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout16">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="   序号："
                        android:textSize="25dp"
                        />
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="所用时间："
                        android:textSize="25dp"
                        />
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textSize="25dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textSize="25dp"
                        />


                </LinearLayout>

            </RelativeLayout>
            <ListView
                android:id="@+id/lv_times"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_below="@+id/relativeLayout16">

            </ListView>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>