<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activity.CombinedTrainingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_title_bar_newer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="695dp"
        android:orientation="horizontal">

        <ScrollView
            android:scrollbars="none"
            android:id="@+id/sv_container"
            android:layout_width="0dp"
            android:layout_height="645dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="640dp"
                android:layout_height="700dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_first"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_time_big"
                    android:orientation="vertical">

                </RelativeLayout>
                <RelativeLayout

                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_traintime">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="2dp"
                        android:text="训练次数:"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                    <TextView
                        android:id="@+id/tv_training_times"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="2dp"
                        android:text="20"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="245dp"
                        android:layout_marginTop="2dp"
                        android:text="次"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="560dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="70dp">

                    <ImageView
                        android:id="@+id/img_training_times_sub"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_sub" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <SeekBar
                        android:id="@+id/bar_training_times"
                        style="@style/Widget.SeekBar.Normal"
                        android:layout_width="380dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dip"
                        android:max="100"
                        android:progress="20"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="445dp"
                        android:layout_marginTop="5dp"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textSize="30sp" />


                    <ImageView
                        android:id="@+id/img_training_times_add"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="510dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_plus" />


                </RelativeLayout>
                <LinearLayout
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="155dp"
                    android:orientation="horizontal"
                    android:layout_width="550dp"
                    android:layout_height="1dip">

                    <View

                        android:layout_width="150dp"
                        android:layout_height="1dip"
                        android:background="@color/grey"/>
                    <View
                        android:layout_marginLeft="200dp"
                        android:layout_width="180dp"
                        android:layout_height="1dip"
                        android:background="@color/grey"/>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="560dp"
                    android:layout_height="35dip"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="138dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="延迟时间"
                        android:textSize="23sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="157dp"
                        android:layout_marginStart="157dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="23sp"
                        android:id="@+id/tv_delay_time"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="285dp"
                        android:layout_marginStart="285dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="秒"
                        android:textSize="23sp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="320dp"
                        android:layout_marginStart="320dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="560dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="200dp">

                    <ImageView
                        android:id="@+id/img_delay_time_sub"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_sub" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <SeekBar
                        android:id="@+id/bar_delay_time"
                        style="@style/Widget.SeekBar.Normal"
                        android:layout_width="380dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dip"
                        android:max="10"
                        android:progress="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="465dp"
                        android:layout_marginTop="5dp"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/img_delay_time_add"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="510dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_plus" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="286dp"
                    android:orientation="horizontal"
                    android:layout_width="550dp"
                    android:layout_height="1dip">

                    <View

                        android:layout_width="150dp"
                        android:layout_height="1dip"
                        android:background="@color/grey"/>
                    <View
                        android:layout_marginLeft="200dp"
                        android:layout_width="180dp"
                        android:layout_height="1dip"
                        android:background="@color/grey"/>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="560dp"
                    android:layout_height="35dip"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="269dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="超时时间"
                        android:textSize="23sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="157dp"
                        android:layout_marginStart="157dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="23sp"
                        android:id="@+id/tv_over_time"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="285dp"
                        android:layout_marginStart="285dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="秒"
                        android:textSize="23sp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="320dp"
                        android:layout_marginStart="320dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="560dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="325dp">

                    <ImageView
                        android:id="@+id/img_over_time_sub"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_sub" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <SeekBar
                        android:id="@+id/bar_over_time"
                        style="@style/Widget.SeekBar.Normal"
                        android:layout_width="380dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dip"
                        android:max="30"
                        android:progress="5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="465dp"
                        android:layout_marginTop="5dp"
                        android:text="30"
                        android:textColor="@color/black"
                        android:textSize="30sp" />


                    <ImageView
                        android:id="@+id/img_over_time_add"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="510dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_plus" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/r1_second"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/rl_first"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_device"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="设备个数"
                            android:textSize="28sp" />


                        <Spinner
                            android:id="@+id/sp_dev_num"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:background="@drawable/spinner">

                        </Spinner>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/btn_on"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/img_openlight" />

                            <Button
                                android:id="@+id/btn_off"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/img_closelight" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备编号"
                            android:textSize="28sp"/>

                        <TextView
                            android:id="@+id/tv_device_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="55dp"
                            android:textSize="28sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_forth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="580dp"
                    android:layout_below="@+id/r1_third"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_downtime"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_down_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="倒计时:00:00:00"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center">
                        <Button
                            android:id="@+id/btn_begin"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="0dp"
                            android:background="@drawable/img_situpbegin"
                            />
                        <Button
                            android:id="@+id/btn_pause"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/img_situppause"
                            />
                        <Button
                            android:id="@+id/btn_stop"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="0dp"
                            android:background="@drawable/img_situpstop"
                            />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

        </ScrollView>
        <!--#############################################################################################-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_score"
                android:layout_margin="20dp"
                android:id="@+id/relativeLayout3">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="450dp"
                android:layout_height="45dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_scoretitle"
                android:id="@+id/relativeLayout2">

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="5dp"
                    android:text="训练结果"
                    android:textColor="@color/white"
                    android:textSize="25sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="75dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="运行次数:"
                    android:textSize="23sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="遗漏次数"
                    android:textSize="23sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="平均时间:"
                    android:textSize="23sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="总时间"
                    android:textSize="23sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="125dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="---"/>

                <TextView
                    android:id="@+id/tv_lost_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="---"/>

                <TextView
                    android:id="@+id/tv_average_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="---"/>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="---"/>

            </LinearLayout>

            <ListView

                android:id="@+id/lv_times"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_marginTop="160dp"
                android:divider="#00000000"
                android:layout_alignLeft="@+id/relativeLayout3"
                android:layout_alignStart="@+id/relativeLayout3"
                android:layout_alignRight="@+id/relativeLayout3"
                android:layout_alignEnd="@+id/relativeLayout3">

            </ListView>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
