<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activity.CombinedTrainingActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_title_bar_newer" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_first"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_time"
                android:orientation="vertical">

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relativeLayout4"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_traintime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="2dp"
                    android:text="训练时间:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_training_time"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="2dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="245dp"
                    android:layout_marginTop="2dp"
                    android:text="分钟"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="560dp"
                android:layout_height="55dp"
                android:layout_above="@+id/rl_first1"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/img_training_time_sub"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <SeekBar
                    android:id="@+id/bar_training_time"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dip"
                    android:max="20"
                    android:progress="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="465dp"
                    android:layout_marginTop="5dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/img_training_time_add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="510dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_first1"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/bg_time"
                android:orientation="vertical"
                android:layout_below="@+id/rl_first"
                android:layout_marginTop="20dp"
                android:layout_alignRight="@+id/rl_first"
                android:layout_alignEnd="@+id/rl_first"
                android:layout_alignLeft="@+id/rl_first"
                android:layout_alignStart="@+id/rl_first">

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relativeLayout6"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_traintime"
                android:layout_above="@+id/relativeLayout17"
                android:layout_alignLeft="@+id/relativeLayout4"
                android:layout_alignStart="@+id/relativeLayout4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="2dp"
                    android:text="超时时间:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_over_time"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="2dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="245dp"
                    android:layout_marginTop="2dp"
                    android:text="分钟"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="560dp"
                android:layout_height="55dp"
                android:layout_above="@+id/rl_second"
                android:layout_alignLeft="@+id/relativeLayout5"
                android:layout_alignStart="@+id/relativeLayout5"
                android:id="@+id/relativeLayout17">

                <ImageView
                    android:id="@+id/img_over_time_sub"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_sub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <SeekBar
                    android:id="@+id/bar_over_time"
                    style="@style/Widget.SeekBar.Normal"
                    android:layout_width="380dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dip"
                    android:max="20"
                    android:progress="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="465dp"
                    android:layout_marginTop="5dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/img_over_time_add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="510dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_plus" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_second"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignEnd="@+id/rl_first1"
                android:layout_alignLeft="@+id/rl_first1"
                android:layout_alignRight="@+id/rl_first1"
                android:layout_alignStart="@+id/rl_first1"
                android:layout_below="@+id/rl_first1"
                android:layout_marginTop="34dp"
                android:background="@drawable/bg_groupdevide"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="设 备 个 数"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/sp_dev_num"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/spinner">

                    </Spinner>

                    <Button
                        android:id="@+id/btn_on"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/img_openlight" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="每组设备个数"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/sp_device_num"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/spinner">

                    </Spinner>

                    <Button
                        android:id="@+id/btn_off"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/img_closelight" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="每次亮灯个数"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/sp_light_num"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/spinner">

                    </Spinner>

                </LinearLayout>

                <ListView
                    android:id="@+id/lv_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"></ListView>

            </LinearLayout>


        </RelativeLayout>

        //right

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/relativeLayout2"
                android:layout_width="450dp"
                android:layout_height="45dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_scoretitle">


                <Button
                    android:id="@+id/btn_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00000000"
                    android:text="训练结果"
                    android:textColor="@color/ui_green"
                    android:textSize="25sp" />
            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_first2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="21dp"
       android:layout_marginLeft="180dp"

            android:orientation="vertical"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="运行次数："

                    android:textSize="25sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/tv_current_times"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="25sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="遗漏次数："
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2" />
            <TextView
                android:id="@+id/tv_lost_times"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="25sp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2" />


         </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_first3"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:orientation="horizontal"
            android:layout_below="@+id/rl_first2"
            android:layout_alignLeft="@+id/rl_first2"
            android:layout_alignStart="@+id/rl_first2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="组号:"
                android:textSize="25sp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="得分:"
                android:textSize="25sp"
                android:layout_marginLeft="240dp"
                />

            </RelativeLayout>

            <ListView
                android:id="@+id/lv_scores"
                android:layout_below="@id/rl_first3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1">

            </ListView>
            <LinearLayout
                android:id="@+id/rl_third"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/lv_scores"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_downtime"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总时间:00:00:00"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_begin"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/img_situpbegin" />

                    <Button
                        android:id="@+id/btn_pause"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/img_situppause" />

                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/img_situpstop" />
                </LinearLayout>
                </LinearLayout>




        </RelativeLayout>

    </LinearLayout>

</LinearLayout>