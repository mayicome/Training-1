<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sequence_choose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.oucb303.training.activity.SequenceChooseActivity">


    <include layout="@layout/layout_title_bar_newer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:background="@drawable/sequence_choose_bg"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white"
            android:minHeight="?android:attr/listPreferredItemHeight">

            <ListView
                android:layout_margin="20dp"
                android:dividerHeight="1px"
                android:layout_marginLeft="20dp"
                android:id="@+id/lv_sequence_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
            </ListView>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
