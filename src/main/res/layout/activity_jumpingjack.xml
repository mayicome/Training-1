                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="训练分组："
                            android:textSize="28sp" />


                        <Spinner
                            android:id="@+id/sp_group_num"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/spinner">

                        </Spinner>

